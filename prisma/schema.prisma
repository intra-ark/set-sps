generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model Line {
  id             Int        @id @default(autoincrement())
  name           String     @unique
  slug           String     @unique
  headerImageUrl String?
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  products       Product[]
  assignedUsers  UserLine[]
}

model Product {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  image     String?    // URL or path to the image
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  yearData  YearData[]
  
  lineId    Int?
  line      Line?      @relation(fields: [lineId], references: [id], onDelete: Cascade)

  @@index([lineId])
}

model YearData {
  id        Int      @id @default(autoincrement())
  year      Int
  dt        Float?   // Design Time
  ut        Float?   // Useful Time
  nva       Float?   // Non-Value Added
  kd        Float?   // KD (%)
  ke        Float?   // KE
  ker       Float?   // KER
  ksr       Float?   // KSR
  otr       Float?   // OT
  tsr       String?  // TSR (can be "#DIV/0!" so string might be safer, or handle in logic)
  
  productId Int
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([productId, year])
}

model User {
  id            Int        @id @default(autoincrement())
  username      String     @unique
  password      String
  role          String     @default("USER") // "ADMIN" or "USER"
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  assignedLines UserLine[]
}

model UserLine {
  id        Int      @id @default(autoincrement())
  userId    Int
  lineId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  line      Line     @relation(fields: [lineId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, lineId])
}

model GlobalSettings {
  id             Int    @id @default(autoincrement())
  headerImageUrl String @default("/F400i.png")
  availableYears Int[]  @default([2023, 2024, 2025, 2026, 2027])
}
